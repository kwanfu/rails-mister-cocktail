<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
    <%= dose.description  %>
    <%= dose.ingredient.name %>
    <%= link_to "delete", dose_path(dose), method: :delete %>
    </li>
  <% end %>
</ul>

<br>

<%= link_to "Create a new dose", new_cocktail_dose_path(@cocktail) %>
<br>
<%= link_to "Back to all cocktails", cocktails_path %>
